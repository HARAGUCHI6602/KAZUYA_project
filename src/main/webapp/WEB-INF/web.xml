<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>ProductManage</display-name>

  <!-- 文字化け対策（JSP側でも pageEncoding="UTF-8" を設定） -->
  <context-param>
    <param-name>defaultCharacterEncoding</param-name>
    <param-value>UTF-8</param-value>
  </context-param>

  <!-- ===== ログイン／ログアウト サーブレット ===== -->

  <!-- /login に対する処理 -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>model.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!-- /logout に対する処理 -->
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>model.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <!-- ===== 認可フィルタ（未ログインはログイン画面へ） ===== -->
  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>model.filter.AuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <!-- 最初に開くページ（ログインから始める場合は login.jsp 推奨） -->
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>

</web-app>

